<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Include the Toolbar -->
    <include layout="@layout/toolbar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <!-- Calendar -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        app:mcv_arrowColor="@color/white"
        app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:mcv_headerTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:mcv_selectionColor="@color/purple_200"
        app:mcv_showOtherDates="none"
        app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ProgressBar
        android:id="@+id/loadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"/>

    <!-- TextView pentru suma cheltuielilor È™i buget -->
    <TextView
        android:id="@+id/textExpensesBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textAlignment="center"/>

    <!-- Butonul CATEGORII -->
    <Button
        android:id="@+id/buttonCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORII"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="@color/purple_500" />

    <!-- Butonul CHELTUIELI -->
    <Button
        android:id="@+id/buttonExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHELTUIELI"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="@color/teal_700" />

    <!-- Butonul BUGET -->
    <Button
        android:id="@+id/buttonBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUGET"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:backgroundTint="@color/purple_500" />




</LinearLayout>